@model List<ReservacionLaboratorio.Models.Campus>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Seleccionar Campus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container text-center mt-5">
        <h2>Seleccione un Campus</h2>
        <div class="row mt-4">
            @foreach (var campus in Model)
            {
                <div class="col-md-3">
                    <div class="card shadow-lg">
                        <!-- Imagen del Campus -->
                        <img src="@($"/images/campus/{campus.Id}.jpg")"
                             class="card-img-top"
                             alt="@campus.Nombre"
                             style="width: 100%; height: 200px; object-fit: cover;">

                        <!-- Información del Campus -->
                        <div class="card-body">
                            <h5 class="card-title">@campus.Nombre</h5>

                            <!-- Enlace para seleccionar el Campus -->
                            <a href="@Url.Action("SeleccionarEdificio", "Campus", new { campusId = campus.Id })"
                               class="btn btn-primary">
                                Seleccionar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>



