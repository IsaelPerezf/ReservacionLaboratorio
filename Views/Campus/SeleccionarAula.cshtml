@model List<ReservacionLaboratorio.Models.Edificios>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Seleccionar Edificio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container text-center mt-5">
        <h2>Edificios en el Campus: @ViewData["CampusNombre"]</h2>
        <div class="row mt-4">
            @foreach (var edificio in Model)
            {
                <div class="col-md-3">
                    <div class="card shadow-lg">
                        <!-- Imagen del Edificio -->
                        <img src="@($"/images/edificios/{edificio.Id}.jpg")"
                             class="card-img-top"
                             alt="@edificio.Nombre"
                             style="width: 100%; height: 200px; object-fit: cover;">

                        <!-- Información del Edificio -->
                        <div class="card-body">
                            <h5 class="card-title">@edificio.Nombre</h5>

                            <!-- Enlace para seleccionar el Edificio y ver sus Aulas -->
                            <a href="@Url.Action("SeleccionarAula", "Campus", new { edificioId = edificio.Id })"
                               class="btn btn-primary">
                                Seleccionar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
